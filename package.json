{
  "name": "@root/satori",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "docs",
    "adapters/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yakumo esbuild && yakumo tsc",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "test": "yakumo mocha",
    "test:text": "rimraf coverage && c8 -r text yarn test",
    "test:json": "rimraf coverage && c8 -r json yarn test",
    "test:html": "rimraf coverage && c8 -r html yarn test"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@types/rimraf": "^3.0.2",
    "c8": "^7.11.3",
    "chai": "^4.3.6",
    "esbuild": "^0.14.48",
    "esbuild-register": "^3.3.3",
    "mocha": "^9.2.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2",
    "yakumo": "^0.2.8",
    "yakumo-esbuild": "^0.2.3",
    "yakumo-mocha": "^0.2.5",
    "yakumo-publish": "^0.2.4",
    "yakumo-tsc": "^0.2.4",
    "yakumo-upgrade": "^0.2.3",
    "yakumo-version": "^0.2.5"
  },
  "yakumo": {
    "require": [
      "esbuild-register"
    ]
  }
}
